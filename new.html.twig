{% extends 'base.html.twig' %}

{% block body %}
    <h1>Créer une nouvelle absence</h1>

    {# Affichage des messages de flash si existants #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <script>
                Swal.fire({
                    icon: '{{ label == 'success' ? 'info' : 'error' }}',  {# Utiliser 'info' pour succès (bleu) #}
                    title: '{{ label == 'success' ? 'Succès' : 'Erreur' }}',
                    text: '{{ message }}',
                    showConfirmButton: true
                });
            </script>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }} {# Désactive toute la validation HTML #}
        {{ form_row(form.Date) }}
        {{ form_row(form.nbr_abs) }}
        {{ form_row(form.type) }}
        {{ form_row(form.cin) }}
        {{ form_row(form.image_path) }}
        <button class="btn">Enregistrer</button>
    {{ form_end(form) }}

    {# Lien vers la liste des absences après ajout #}
    <a href="{{ path('app_absence_index') }}" class="btn btn-secondary">Retour à la liste des absences</a>

    {# Lien vers la liste des pénalités #}
    <a href="{{ path('app_penalite_new') }}" class="btn btn-secondary">Retour à la liste des pénalités</a>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                Swal.fire({
                    icon: '{{ label == 'success' ? 'info' : 'error' }}',  {# Utiliser 'info' pour succès (bleu) #}
                    title: '{{ label == 'success' ? 'Succès' : 'Erreur' }}',
                    text: '{{ message }}',
                    showConfirmButton: true
                });
            {% endfor %}
        {% endfor %}
    </script>
{% endblock %}
